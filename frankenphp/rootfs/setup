#!/usr/bin/env sh

set -e

cd /var/www/html

if [[ -e /var/www/html/vendor/bin/onlishop-deployment-helper ]]; then
    exec ./vendor/bin/onlishop-deployment-helper run
fi

echo "### ERROR ###"
echo ""
echo "### The setup scripts are removed ###"
echo "### Please install the Onlishop Deployment Helper using composer require onlishop/deployment-helper to continue ###"
echo "### For more information see https://developer.onlishop.com/docs/guides/hosting/installation-updates/deployments/deployment-helper.html ###"
echo ""
echo "### ERROR ###"
echo ""

exit 1
